{
  "name": "marketplace-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.mts",
    "test:e2e:watch": "vitest --config ./vitest.config.e2e.mts",
    "migration:generate": "prisma migrate dev",
    "studio": "prisma studio",
    "key:gen:private": "openssl genpkey -algorithm RSA -out private_key.pem -pkeyopt rsa_keygen_bits:2048",
    "key:gen:public": "openssl rsa -pubout -in private_key.pem -out public_key.pem",
    "key:string": "base64 -w 0 private_key.pem > private_key.pem.txt & base64 -w 0 public_key.pem > public_key.pem.txt"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
